<?xml version="1.0" encoding="UTF-8"?>
<DocumentConformance xmlns="http://www.hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.hl7.org/fhir ..\..\schema\documentconformance.xsd">
  <id>6c8d7aec-05b8-4093-8101-7f5eab5a416d</id>
  <date>2012-01-04</date>
  <publisher>
    <name>ACME Corporation</name>
    <contact>
      <system>email</system>
      <value>wile@acme.org</value>
    </contact>
  </publisher>
  <software>
    <name>EHR</name>
    <version>0.00.020.2134</version>
  </software>
  
  <!-- 1 document profile. -->
  <document>
    <name>General</name>
    <purpose>Basic rules for all documents in the EHR system</purpose>
    <resource>
      <!-- document resource first, as required -->
      <type>Document</type>
      <element>
        <path>Document.id</path>
        <min>1</min>
        <max>1</max>
        <type>id</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.instant</path>
        <min>1</min>
        <max>1</max>
        <type>dateTime</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.type</path>
        <min>1</min>
        <max>1</max>
        <type>CodeableConcept</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.title</path>
        <min>1</min>
        <max>1</max>
        <type>string</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.setId</path>
        <comments>All EHR documents must be versioned using setId/Version</comments>              
        <min>1</min>
        <max>1</max>
        <type>id</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.version</path>
        <min>1</min>
        <max>1</max>
        <type>integer</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.replaces</path>
        <min>0</min>
        <max>0</max>
        <type>id</type>
        <conformance>Prohibited</conformance>            
      </element>
      <element>
        <path>subject</path>
        <comments>Only individual humans in the EHR</comments>
        <min>1</min>
        <max>1</max>
        <type>Resource(Patient)</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.author</path>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Doument.author.time</path>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.author.party</path>
        <comments>Only humans author documents</comments>
        <min>1</min>
        <max>1</max>
        <type>Resource(Person)</type>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.attestor</path>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Doument.attestor.mode</path>
        <comments>Only legal authentication</comments>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
        <content>
         <valueCode>legal</valueCode>
        </content>
      </element>
      <element>
        <path>Doument.attestor.time</path>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
      </element>
      <element>
        <path>Document.attestor.party</path>
        <min>1</min>
        <max>1</max>
        <conformance>Mandatory</conformance>            
      </element>
      <!-- etc, though stopping here simply means, no rules made about the other elements -->
    </resource>
  </document>

	<text>
    <status>generated</status>
    <div xmlns="http://www.w3.org/1999/xhtml">
      <p>General EHR Document rules (Acme Healthcare): </p>
      <ul>
        <li>EHR documents must be versioned using setId</li>
        <li>Only individual humans in the EHR</li>
        <li>Only humans author documents</li>
        <li>Only legal authentication</li>
      </ul>
    </div>
  </text>
</DocumentConformance>
