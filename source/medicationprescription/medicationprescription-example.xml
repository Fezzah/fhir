<?xml version="1.0" encoding="UTF-8"?>
<MedicationPrescription xmlns="http://hl7.org/fhir"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://hl7.org/fhir ..\..\schema\medicationprescription.xsd">
  <!-- insert contents here -->

  <text>
    <status value="generated"/>
    <div xmlns="http://www.w3.org/1999/xhtml">
      <p>Penicillin VK 10ml suspension to be administered by oral route</p>
      <p>ONE 5ml spoonful to be taken THREE times a day</p>
      <p>100ml bottle</p>
      <p>to patient ref: a23</p>
      <p>by doctor X</p>
    </div>
  </text>
  <status>
    <coding>
      <system value="./MedPrescStatus"/>
      <code value="completed"/>
      <display value="The prescribing of the medication has finished"/>
    </coding>
  </status>

  <patient>
    <type value="Patient"/>
    <url value="../patient/@example"/>
  </patient>
  <prescriber>
    <type value="Practitioner"/>
    <url value="../practitioner/@example"/>
  </prescriber>


  <administration>
    <medication>
      <type value="Medication"/>
      <url value="../medication/@example"/> 
    </medication>
    
    <dosage>
      <timing>
        <repeat>
          <frequency value="3"/>
          <duration value="1"/>
          <units value="d"/>
        </repeat>
      </timing>
      <route>
        <coding>
          <system value="http://snomed.info"/>
          <code value="363743006"/>
          <display value="oral administration of treatment"/>
        </coding>
      </route>
      <quantity>
        <value value="10"/>
        <units value="ml"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="ml"/>
      </quantity>
    </dosage>
  </administration>

  <dispense>
    <quantity>
      <value value="100"/>
      <units value="ml"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="ml"/>
    </quantity>
  </dispense>

</MedicationPrescription>
